page{
    background-color: #f9f9f9;
}
.playlist-container{
    width: 100%;
    margin-top: 15rpx;
}
.create{
    background-color: white;
    color: #C20C0C;
    text-align: center;
    width: 90%;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 20rpx;
    margin: 0 auto;
}
.playlist-item{
    width: 90%;
    height: 150rpx;
    display: flex;
    flex-direction: row;
    background-color: white;
    margin: 20rpx auto;
    justify-content: space-between;
}
.left{
    width: 25%;
    height: 100%;

}
.left image{
    width: 100%;
    height: 100%;
}
.right{
    width: 70%;
    height: 100%;
}
.playlist-name{
    font-size: 36rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-top: 20rpx;
}
.playlist-desc{
    font-size: 32rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-top: 20rpx;
    color: gray;
}